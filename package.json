{
  "name": "jobbig",
  "version": "0.0.1",
  "type": "module",
  "workspaces": [
    "packages/*",
    "examples/*",
    "apps/*"
  ],
  "devDependencies": {
    "@biomejs/biome": "2.1.3",
    "@types/bun": "latest",
    "zshy": "^0.3.4"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@changesets/cli": "^2.29.5",
    "turbo": "^2.5.5"
  },
  "packageManager": "bun@1.2.19",
  "scripts": {
    "dev": "turbo run dev",
    "dev:watch": "turbo run dev --watch",
    "dev:watch:all": "turbo run dev --watch --all",
    "build": "turbo run build",
    "release": "turbo run build:lib && changeset publish --no-git-tag"
  }
}
